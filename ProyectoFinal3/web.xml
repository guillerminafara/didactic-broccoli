<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <servlet>
        <servlet-name>IndexPageServlet</servlet-name>
        <servlet-class>IndexPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPageServlet</servlet-name>
        <url-pattern>/paginaPrincipal</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <servlet-class>CrearUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <url-pattern>/crearUsuario</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsertServlet</servlet-name>
        <servlet-class>InsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertServlet</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BuscarServlet</servlet-name>
        <servlet-class>BuscarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuscarServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>AddCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

</web-app>

